<view class="container">
    <view class="header">
        发现
    </view>
    <view wx:if="{{!loading}}">
        <view>标签</view>
        <checkbox-group bindchange="labelChange">
            <label class="checkbox row" wx:for="{{labels}}" wx:key="{{index}}">
                <checkbox value="{{item.value}}" checked="{{item.checked}}" />{{item.value}}
                <view>数量：{{item.count}}</view>
            </label>
        </checkbox-group>
    </view>
    <!-- <s-label-cloud width="750" height="500" data="{{testData}}"></s-label-cloud> -->
    <l-button class="update-btn" size="medium" bind:tap="updateGoods">更新</l-button>
    <view wx:if="{{goods.length!=0}}">
        <l-radio-group bind:linchange="goodChange">
            <block wx:for="{{goods}}" wx:key="{{index}}">
                <view class="list-item">
                    <l-radio class="list-radio" value="{{index}}" custom="{{true}}">
                    </l-radio>
                    <s-list-item name="{{item.name}}" labels="{{item.labels}}" bind:detail="showDetail" index="{{index}}">
                    </s-list-item>
                </view>
            </block>
        </l-radio-group>
    </view>
    <view wx:if="{{goods.length===0 && !loading}}">
        当前标签组合没有结果
    </view>
    <l-button class="confirm-btn" size="large" bindtap="onConfirm" shape="semicircle">确定</l-button>
</view>